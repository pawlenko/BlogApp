
<div style="padding-bottom: 10px;">
        <%= link_to "Add new article", {:action=>'new'}, :class =>'btn btn-mini btn-primary' %>
        </div>
        
        <table class="table table-striped">
        <tr class="info">
                        <th>Name</th>
                        <th>Category</th>
                        <th>Added by</th>
                        <th>Visibility</th>
                        <th>Action</th>
        </tr>
        <% @articles.each do |article| %>
        <tr>
        <td><%= article.name %></td>
        <td><%= article.category.name %></td>
        <td><%= article.user.username %></td>
        <td><%= article.visible %></td>
        <td class="actions"> 
                <%= link_to("Edit",{:action=>'edit', :id => article.id }, :class =>'btn btn-xs btn-primary') %>
                <%= link_to("Remove",{:action=>'destroy',:id=>article.id }  , method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger") %>
        </td>
        </tr>
        <% end %>
        </table>