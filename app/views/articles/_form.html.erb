

<%= form_for(@article) do |f| %>

<%  errors_helper(@article) %>




<%  !if @article.image.file?  %>
<div class="form-group row">
    <%= f.label(:image,"Current Image",:class=> "col-sm-2 col-form-label") %><br />
    <div class="col-sm-10">
        <%= image_tag(@article.image.url(:thumb), :class=>"form-control")  %>
    </div>
  </div>
<% end %>

<div class="form-group row">
     <%= f.label(:image,"Header Image",:class=> "col-sm-2 col-form-label") %><br />
  <div class="col-sm-10">
      <%= f.file_field :image , :class=>"form-control"  %>
  </div>
</div>

  <div class="form-group row">
        <%= f.label :name,"Article Name",:class=> "col-sm-2 col-form-label" %><br />
        <div class="col-sm-10">
                <%= f.text_field :name , :class=>"form-control" %>
        </div>
   </div>

      <div class="form-group row">
            <%= f.label :visible,"Visibility",:class=> "col-sm-2 col-form-label" %><br/>
        <div class="col-sm-10">
          <div class="form-check">
            <%= f.check_box :visible , :class=>"form-check-input" %>
          </div>
        </div>
      </div>

       <div class="form-group row">
            <%= f.label :category_id,"Category",:class=> "col-sm-2 col-form-label" %><br/>
                    <div class="col-sm-10">
                    <%= f.select :category_id,@categories.map{|t| [t.name,t.id]},{},{:class=>"form-control"} %>
                </div>
       </div>

    <div class="form-group row">
        <%= f.label :content,"Content",:class=> "col-sm-2 col-form-label" %><br />
        <div class="col-sm-10">
                <%= f.trix_editor :content %>
        </div>
   </div>
     
     
      <div class="form-group row">
        <div class="col-sm-10">
         <%= f.submit :class=>"btn btn-primary" %>
        </div>
      </div>


<% end %>

