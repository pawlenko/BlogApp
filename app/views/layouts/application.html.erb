<!DOCTYPE html>
<html>
  <head>
    <title>BlogApp</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta name="vieport" content="width=device-width,initial-scale=1.0">
  </head>

  <body>

     

        <!-- Navigation -->
        <div class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-white border-bottom box-shadow">
            <h5 class="my-0 mr-md-auto font-weight-normal"></h5>
            <nav class="my-2 my-md-0 mr-md-3">
              <%= link_to "Home", root_path,:class=>"p-2 text-dark" %>
            </nav>
            
       
            <% if user_signed_in? %>
            <nav class="my-2 my-md-0 mr-md-3">
            <div class="dropdown show">
                <a class="btn btn-secondary dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                  My Account
                </a>
                <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                  <%= link_to "Edit profile", edit_user_registration_path,:class=>"dropdown-item" %>
                  <% if current_user.admin? %>
                  <%= link_to "Categories",{ controller: "/categories", action: "index" },:class=>"dropdown-item" %>
                  <%= link_to "Articles",{ controller: "/articles", action: "index" },:class=>"dropdown-item" %>
                  <% end %>
                </div>
              </div>

          </nav>
          <% else %>
            <%= link_to "Log In", new_user_session_path,:class=>"btn btn-outline-primary"  %>
          <% end %>
          <% if user_signed_in? %>
           <%= link_to "Log Out", destroy_user_session_path, method: :delete,:class=>"btn btn-outline-danger" %>
          <% end %>

          </div>

          <% if notice %>
          <p class="alert alert-info"> <%= notice %></p>
          <% end %>
          
          <% if alert %>
          <p class="alert alert-danger"> <%= alert %></p>
          <% end %>

          
  <div class="container">
    <%= yield %>
  </div>

       <!-- Footer -->
       <footer class="footer sticky">
          <div class="container">
            <span class="text-muted">Blog Webiste @ Pawe≈Ç Lewandowski</span>
          </div>
        </footer>

  </body>
</html>
